<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sellerhomepagee"
    tools:context=".BusinessProfile">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/busprofilepicSetting"
        android:layout_width="186dp"
        android:layout_height="184dp"
        android:src="@drawable/hqdefault"
        app:civ_border_color="#FF000000"
        app:civ_border_width="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.305" />

    <ImageView
        android:id="@+id/imgUpload"
        android:layout_width="133dp"
        android:layout_height="129dp"
        android:background="@drawable/mask_group_26"
        android:src="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:id="@+id/txtBuzName"
        android:layout_width="181dp"
        android:layout_height="34dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="184dp"
        android:fontFamily="@font/hind_siliguri_bold"
        android:text="Business Name"
        android:textAlignment="textStart"
        android:textColor="#5F3645"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/busprofilepicSetting"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUsername"
        android:layout_width="123dp"
        android:layout_height="20dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/hind_madurai_bold"
        android:text="Username"
        android:textAlignment="center"
        android:textColor="#CBA295"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226" />

    <Button
        android:id="@+id/btnBusinessChat"
        android:layout_width="25dp"
        android:layout_height="26dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnBusAccSettings"
        android:layout_width="114dp"
        android:layout_height="33dp"
        android:background="@null"
        android:fontFamily="@font/catamaran_semibold"
        android:text="Edit Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.907"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45" />

    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="159dp"
        android:layout_height="125dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.709" />

    <Button
        android:id="@+id/btnUploadPost"
        android:layout_width="41dp"
        android:layout_height="29dp"
        android:layout_marginBottom="88dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnViewPosts"
        android:layout_width="38dp"
        android:layout_height="32dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgUpload"
        app:layout_constraintVertical_bias="0.376" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="151dp"
        android:layout_height="19dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="80dp"
        android:text="dummy"
        android:textAlignment="center"
        android:textColor="#CBA295"
        app:layout_constraintBottom_toTopOf="@+id/btnBusAccSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/busprofilepicSetting" />

    <TextView
        android:id="@+id/txtContact"
        android:layout_width="88dp"
        android:layout_height="15dp"
        android:layout_marginEnd="44dp"
        android:text="Contact"
        android:textAlignment="center"
        android:textColor="#CBA295"
        app:layout_constraintBottom_toTopOf="@+id/btnBusAccSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/busprofilepicSetting"
        app:layout_constraintTop_toBottomOf="@+id/txtDesc"
        app:layout_constraintVertical_bias="0.666" />

    <Button
        android:id="@+id/btnUsers"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="28dp"
        android:layout_height="31dp"
        android:layout_marginTop="34dp"
        android:background="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnUsers"
        app:layout_constraintHorizontal_bias="0.085"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnViewPosts"
        app:layout_constraintVertical_bias="0.619" />

    <Button
        android:id="@+id/btnLocation"
        android:layout_width="42dp"
        android:layout_height="29dp"
        android:layout_marginBottom="52dp"
        android:background="@null"
        app:layout_constraintBottom_toTopOf="@+id/btnUsers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toEndOf="@+id/btnUploadPost" />


</androidx.constraintlayout.widget.ConstraintLayout>


